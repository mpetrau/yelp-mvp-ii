<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: "What a great place ...", label_html: {class: "sr-only"} %>
  <%= f.input :rating, collection: 1..5, prompt: "Leave your rating!", label_html: {class: "sr-only"}  %>
  <%= f.submit "Submit review!", class: "btn btn-success" %>
<% end %>
